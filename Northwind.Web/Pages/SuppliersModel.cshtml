@page "/suppliers"
@model Northwind.Web.Pages.SuppliersModel
@using Northwind.EntityModels.Mysql
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <h1 class="display-2">Suppliers</h1>
    <table class="table">
        <thead class="thead-inverse">
        <tr>
            <th>Company Name</th>
            <th>Country</th>
            <th>Phone</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Suppliers is not null)
        {
            @foreach (Supplier s in Model.Suppliers)
            {
                <tr>
                    <td>@s.CompanyName</td>
                    <td>@s.Country</td>
                    <td>@s.Phone</td>
                </tr>
            }
        }
        </tbody>
    </table>
    
</div>

<div class="row">
    <p>Enter details for a new suppliers: </p>
    @* POST类型的form表单，自动触发后台代码中的OnPost方法 *@
    <form method="POST">
        @* asp-for将<input>、<select>等直接绑定到模型中的属性 *@
        <div>
            <input asp-for="Supplier!.CompanyName"
                   placeholder="Company Name"/></div>
        <br/>
        <div>
            <input asp-for="Supplier!.Country"
                   placeholder="Country"/></div>
        <br/>
        <div>
            <input asp-for="Supplier!.Phone"
                   placeholder="Phone"/></div>
        <br/>
        <input type="submit"/>
    </form>
</div>