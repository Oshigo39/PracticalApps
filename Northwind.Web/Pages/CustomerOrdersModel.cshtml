@page "/customer-orders"
@using Northwind.EntityModels.Mysql
@model Northwind.Web.Pages.CustomerOrdersModel
@{
    string title = "Customer and their orders";
    ViewData["Title"] = $"Northwind B2B - {title}";
}

<div class="row">
    <h1 class="display-2">@title</h1>
    <div>
        @if (Model.Customer is not null)
        {
            <div>
                <div>@Model.Customer.CompanyName</div>
            </div>
            <div>
                <table>
                    <thead>
                    <tr><th>Order Id</th><th>Order Date</th></tr>
                    </thead>
                    <tbody>
                    @if (Model.Orders != null)
                        foreach (Order o in Model.Orders)
                        {
                            <tr><td>@o.OrderId</td><td>@o.OrderDate</td></tr>
                        }
                    else
                    {
                        <div><p>No orders found for the customer</p></div>
                    }
            </tbody>
                </table>
            </div>
        }
    </div>
</div>